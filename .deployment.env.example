# Copy this file to .deployment.env and adjust values
# Remote SSH connection
DEPLOY_SSH_HOST=your.server.tld
DEPLOY_SSH_USER=ubuntu
DEPLOY_SSH_PORT=22
# Optional: specify a private key path; if omitted, default SSH agent/keys are used
# SSH_KEY=~/.ssh/id_rsa

# Remote directory where the app will be deployed
DEPLOY_TARGET_DIR=/var/www/ivbeck

# App/runtime configuration
DEPLOY_APP_NAME=ivbeck
DEPLOY_NODE_ENV=production
DEPLOY_PORT=3000
